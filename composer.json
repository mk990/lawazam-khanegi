{
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "ext-pdo": "*",
        "lcobucci/jwt": "^4.0",
        "monolog/monolog": "^2.2",
        "php-di/php-di": "^6.3",
        "selective/basepath": "^2.0",
        "slim/psr7": "^1.3",
        "slim/slim": "4.*",
        "slim/twig-view": "3.0",
        "vlucas/phpdotenv": "^5.2"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.9",
        "phpunit/phpunit": "^9.5",
        "robmorgan/phinx": "^0.12.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "scripts": {
        "start": [
            "@php -r \"devServer: http://localhost:8080\";",
            "@php -S localhost:8080 -t public"
        ],
        "test": "phpunit"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    }
}
